@{
    ViewData["Title"] = "New Post";
}

@model Post

<h1>Add A Post</h1>
<form asp-action="CreatePost" asp-controller="Post" method="POST" class="shadow p-3 rounded">
    <div class="mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Body"></label>
        <input asp-for="Body" class="form-control">
        <span class="text-danger" asp-validation-for="Body"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ImgURL"></label>
        <input asp-for="ImgURL" class="form-control">
        <span class="text-danger" asp-validation-for="ImgURL"></span>
    </div>
    <button class="btn btn-primary">Submit</button>
</form>

