<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeltReview</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeltReview.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <div class="d-flex justify-content-between align-items-center bordder-bottom p-4">
            <h1>Welcome @Context.Session.GetString("Username")!</h1>
            <div class="d-flex justify-content-center align-items-center gap-3">
                <a asp-action="Dashboard" asp-controller="Sighting" class="Classes">Home</a>
                <a asp-action="NewSighting" asp-controller="Sighting" class="Classes">Report UAP</a>
                <form asp-action="Logout" asp-controller="User" method="Post">
                    <button class="btn btn-link">Logout</button>
                </form>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BeltReview - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
