@model Sighting

<h1>What did you see?</h1>

<form asp-action="CreateSighting" asp-controller="Sighting" method="Post">
    <div class="my-3">
        <label asp-for="Title"></label>
        <input asp-for="Title">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="my-3">
        <label asp-for="Location"></label>
        <input asp-for="Location">
        <span class="text-danger" asp-validation-for="Location"></span>
    </div>
    <div class="my-3">
        <label asp-for="Date"></label>
        <input asp-for="Date">
        <span class="text-danger" asp-validation-for="Date"></span>
    </div>
    <div class="my-3">
        <label asp-for="Description"></label>
        <input asp-for="Description">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <button class="btn btn-primary">Create</button>
</form>